{
  "name": "ui.apps",
  "private": true,
  "version": "0.0.1",
  "description": "AEM Core CIF Components - ui.apps",
  "main": "index.js",
  "scripts": {
    "test": "npm run prettier:check && npm run karma:run",
    "karma:run": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless karma.conf.js",
    "karma:debug": "karma start --single-run=false --browsers Chrome --debug karma.conf.js",
    "prettier:check": "prettier --check 'src/**/*.{js,css}' --config ./.prettierrc",
    "prettier:fix": "prettier --write 'src/**/*.{js,css}' --config ./.prettierrc",
    "babel:compile": "babel src/javascript --out-dir src/main/content/jcr_root --presets=@babel/env --ignore **/*.min.js && npm run babel:polyfill",
    "babel:polyfill": "cp node_modules/@babel/polyfill/dist/polyfill.min.js src/main/content/jcr_root/apps/core/cif/clientlibs/common/js/lib/",
    "webpack:build": "webpack --config webpack.config.js --mode development"
  },
  "author": "Adobe",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/aem-core-cif-components.git"
  },
  "browserslist": [
    "> 0.05%",
    "not dead",
    "not android 4.1",
    "not android 4.2",
    "not android 4.4",
    "not android 4.4.3",
    "not chrome 29",
    "not chrome 43",
    "not chrome 49",
    "not chrome 54",
    "not firefox 47",
    "not firefox 48",
    "not firefox 51",
    "not firefox 52",
    "not ios 8.1",
    "not ios 9.3",
    "not safari 5.1",
    "not safari 9.1"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "glob": "^7.1.4",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "karma-spec-reporter": "0.0.32",
    "mocha": "^6.1.4",
    "prettier": "^1.18.1",
    "sinon": "^7.3.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4"
  }
}
