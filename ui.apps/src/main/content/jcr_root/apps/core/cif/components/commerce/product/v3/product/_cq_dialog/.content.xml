<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Detail"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cif.shell.picker]"
    trackingFeature="cif-core-components:product:v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured" 
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <sections
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Visible Sections"
                        fieldDescription="Select which sections of the product detail component should be shown. If left empty, the sections defined in the policy will be shown."
                        name="./visibleSections"
                        multiple="{Boolean}true"
                        sling:orderBefore="id"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select">
                        <items jcr:primaryType="nt:unstructured">
                            <actions
                                text="Actions"
                                value="actions"
                                jcr:primaryType="nt:unstructured"/>
                            <description
                                text="Description"
                                value="description"
                                jcr:primaryType="nt:unstructured"/>
                            <details
                                text="Details"
                                value="details"
                                jcr:primaryType="nt:unstructured"/>
                            <images
                                text="Images"
                                value="images"
                                jcr:primaryType="nt:unstructured"/>
                            <options
                                text="Options"
                                value="options"
                                jcr:primaryType="nt:unstructured"/>                                    
                            <price
                                text="Price"
                                value="price"
                                jcr:primaryType="nt:unstructured"/>
                            <quantity
                                text="Quantity"
                                value="quantity"
                                jcr:primaryType="nt:unstructured"/>
                            <sku
                                text="SKU"
                                value="sku"
                                jcr:primaryType="nt:unstructured"/>
                            <title
                                text="Title"
                                value="title"
                                jcr:primaryType="nt:unstructured"/>
                            </items>
                    </sections>
                </items>
            </column>
        </items>
    </content>
</jcr:root>