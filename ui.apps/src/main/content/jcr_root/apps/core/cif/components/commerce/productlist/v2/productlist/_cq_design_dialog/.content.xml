<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    trackingFeature="cif-core-components:productlist:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Product Collection Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <fragmentsStyles
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Define CSS classes to be used in the configuration on experience fragment for the Productlist component"
                                fieldLabel="Experince Fragment Styles">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./fragmentStyles">
                                    <items jcr:primaryType="nt:unstructured">
                                        <name
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The name of this Experience Fragment style."
                                            fieldLabel="Experience Fragment Style name."
                                            required="{Boolean}true"
                                            name="fragmentStyleName"/>
                                        <cssClass
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The CSS class to be applied to the Experience Fragment container"
                                            fieldLabel="Experience Fragment Style CSS class"
                                            name="fragmentStyleCssClass"/>
                                    </items>
                                </field>
                            </fragmentsStyles>
                        </items>
                    </general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
