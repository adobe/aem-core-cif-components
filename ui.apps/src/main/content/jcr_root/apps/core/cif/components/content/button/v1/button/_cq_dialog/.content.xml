<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Button"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_button_v1"
    trackingFeature="cif-core-components:button:v1">
    <content
        granite:class="cmp-button__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkType
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Select Link Type"
                                                name="./linkType">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <linkTo
                                                        granite:hide="${cqDesign.disableChildren}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link To Page"
                                                        value="linkTo"/>
                                                    <product
                                                        granite:hide="${cqDesign.disableStatic}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Product"
                                                        value="product"/>
                                                    <category
                                                        granite:hide="${cqDesign.disableSearch}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Category"
                                                        value="category"/>
                                                    <externalLink
                                                        granite:hide="${cqDesign.disableTags}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="External Link"
                                                        value="externalLink"/>
                                                </items>
                                            </linkType>
                                            <setLinkTo
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="linkTo"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <linkTo
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Leave empty to use current page"
                                                                fieldLabel="Link To Page"
                                                                name="./linkTo"
                                                                rootPath="/content"
                                                                suffix=".html"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </setLinkTo>
                                            <setProduct
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="product"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <productSlug
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="commerce/gui/components/common/cifproductfield"
                                                                fieldLabel="Product"
                                                                name="./productSlug"
                                                                rootPath="/var/commerce/products"
                                                                selectionId="slug"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </setProduct>
                                            <setCategory
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="category"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <categoryId
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="commerce/gui/components/common/cifcategoryfield"
                                                                fieldLabel="Category"
                                                                name="./categoryId"
                                                                rootPath="/var/commerce/products"
                                                                selectionId="id"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </setCategory>
                                            <setExternalLink
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="externalLink"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <externalLink
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="External Link"
                                                                name="./externalLink"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </setExternalLink>
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                fieldDescription="Link to a content page, external URL or page anchor."
                                                fieldLabel="Link"
                                                name="./link"/>
                                            <icon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                fieldDescription="Icon identifier for displaying an icon in the button."
                                                fieldLabel="Icon"
                                                name="./icon"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
