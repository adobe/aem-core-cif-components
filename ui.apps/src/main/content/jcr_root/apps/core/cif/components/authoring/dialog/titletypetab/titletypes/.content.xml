<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Title type"
    sling:resourceType="granite/ui/components/coral/foundation/container"
    margin="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <inputgroup
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/text"
                    text="Allowed HTML tag types for Authors for the title element"/>
                <field
                    cq:showOnCreate="{Boolean}true"
                    granite:class="core-title-sizes-allowed"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                    fieldDescription="The list of HTML elements to use for the title.">
                    <items jcr:primaryType="nt:unstructured">
                        <h1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            checked="true"
                            name="./allowedTypes"
                            text="H1"
                            value="h1"/>
                        <h2
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            checked="true"
                            name="./allowedTypes"
                            text="H2"
                            value="h2"/>
                        <h3
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            checked="true"
                            name="./allowedTypes"
                            text="H3"
                            value="h3"/>
                        <h4
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            checked="true"
                            name="./allowedTypes"
                            text="H4"
                            value="h4"/>
                        <h5
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            checked="true"
                            name="./allowedTypes"
                            text="H5"
                            value="h5"/>
                        <h6
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            checked="true"
                            name="./allowedTypes"
                            text="H6"
                            value="h6"/>
                    </items>
                </field>
                <type
                    granite:class="core-title-size-default"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Default HTML tag type for the title element."
                    name="./type">
                    <items jcr:primaryType="nt:unstructured">
                        <h1
                            jcr:primaryType="nt:unstructured"
                            text="H1"
                            value="h1"/>
                        <h2
                            jcr:primaryType="nt:unstructured"
                            text="H2"
                            value="h2"/>
                        <h3
                            jcr:primaryType="nt:unstructured"
                            text="H3"
                            value="h3"/>
                        <h4
                            jcr:primaryType="nt:unstructured"
                            text="H4"
                            value="h4"/>
                        <h5
                            jcr:primaryType="nt:unstructured"
                            text="H5"
                            value="h5"/>
                        <h6
                            jcr:primaryType="nt:unstructured"
                            text="H6"
                            value="h6"/>
                    </items>
                </type>
            </items>
        </column>
    </items>
</jcr:root>
